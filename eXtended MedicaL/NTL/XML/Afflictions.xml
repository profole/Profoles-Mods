  <!-- /// Medicine/Procedure - Caused by medical equipment or procedure /// -->
  <!-- Bandaged (Healing) - Hidden affliction to replace bleeding and burn with the treatedbleeding and treatedburn afflictions -->
  <Affliction
    identifier="ntl_bandagedhealing"
    type="ntl_procedureaffliction"
	isbuff="true"
    targets="human"
    limbspecific="true"
    healableinmedicalclinic="false"
    showiconthreshold="1000"
    showinhealthscannerthreshold="1000"
    treatmentthreshold="1000"
    maxstrength="240">
    <!-- Replace bleeding with treatedbleeding -->
    <Effect minstrength="0" maxstrength="300" strengthchange="-1">
      <StatusEffect target="Limb" interval="1" disabledeltatime="true">
        <!-- Check for bleeding -->
        <Conditional bleeding="gt 0" />
        <!-- If present on limb, replace it with treatedbleeding -->
        <ReduceAffliction identifier="bleeding" amount="2"/>
        <Affliction identifier="ntl_treatedbleeding" amount="2"/>
      </StatusEffect>
      <!-- Replace burn with bandagedburn-->
      <StatusEffect target="Limb" interval="1" disabledeltatime="true">
        <!-- Check for burn -->
        <Conditional burn="gt 0" />
        <!-- If present on limb, replace it with bandagedburn -->
        <ReduceAffliction identifier="burn" amount="1"/>
        <Affliction identifier="ntl_treatedburn" amount="1"/>
      </StatusEffect>
    </Effect>
  </Affliction>
