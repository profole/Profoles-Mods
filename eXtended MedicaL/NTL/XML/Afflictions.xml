  <!-- /// False Damage - These afflictions cause other afflictions or do other negative things but do not cause damage to vitality /// -->
  <!-- Hemotransfusion Shock - Incompatible blood type received? Do not worry, hemotransfusion shock will quickly put an end to your misery! -->
  <Affliction
    identifier="ntl_hemotransfusionshock"
    type="ntl_falsedamage"
    targets="human"
    healableinmedicalclinic="false"
    showiconthreshold="1000"
    showinhealthscannerthreshold="1"
    treatmentthreshold="1000"
    maxstrength="150">
    <!-- One wrong bloodpack administered gives 75 shock, so after the first 2 you theoretically no longer get any negative effects -->
