  <!-- Treated Bleeding - Less vitality loss, cheaper to heal and heals faster -->
  <Affliction
    identifier="ntl_treatedbleeding"
    type="ntl_procedureaffliction"
	isbuff="true"
    targets="human"
    limbspecific="true"
    showiconthreshold="1000"
    showinhealthscannerthreshold="1"
    treatmentthreshold="1000"
    maxstrength="100"
    healcostmultiplier="1.5">
    <!-- Decreases vitality less than normal bleeding -->
    <Effect minstrength="20" maxstrength="40" strengthchange="-0.2" minvitalitydecrease="0" maxvitalitydecrease="2">
      <!-- Replace bandagedbleeding with bleeding when bandage is removed -->
	  <StatusEffect target="Limb" interval="1" disabledeltatime="true">
        <!-- Check for bandaged -->
        <Conditional bandaged="lt 1" />
        <!-- If not present on limb, replace bandagedbleeding with bleeding -->
        <ReduceAffliction identifier="ntl_treatedbleeding" amount="2"/>
        <Affliction identifier="bleeding" amount="2"/>
      </StatusEffect>
    </Effect>
